<div class="container mt-5">
    <h4>ジャンル一覧・追加</h4>
    <%= form_with model:@genre,url:admin_genres_path,method: :post,class:"row" do |f| %>
      <div class="col-md-2">
          <p>ジャンル名</p>
      </div>
      <div class="col-md-4">
          <%= f.text_field:name,class:"form-control name",placeholder:"ジャンル名" %>
      </div>
      <div class="offset-md-1 col-md-2">
          <%= f.submit "新規登録",class:"btn btn-sm btn-success" %>
      </div>
    <% end %>
    <div class="row">
      <table class="table mt-5">
        <tr>
         <th>ジャンル</th>
         <th></th>
        </tr>
        <% @genre_all.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to "編集する",edit_admin_genre_path(genre.id),method: :get,class:"btn btn-sm btn-success" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
</div>
