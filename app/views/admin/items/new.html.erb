<div class="container-fluid h-100">
    <%= form_with model:@item,url:admin_items_path,method: :post,class:"row" %>
        <div class="col-md-2">
            <h4>商品画像</h4>
        </div>
        <div class="col-md-6">
            <%= f.file_field:image,accept: "image/*" %>
        </div>
        <div class="col-md-2">
            <h4>商品名</h4>
        </div>
        <div class="col-md-6">
            <%= f.text_field:name %>
        </div>
        <div class="col-md-2">
            <h4>商品説明</h4>
        </div>
        <div class="col-md-6">
            <%= f.text_area:introduction %>
        </div>
        <div class="col-md-2">
            <h4>ジャンル</h4>
        </div>
        <div class="col-md-6">
            
        </div>
        <div class="col-md-2">
            <h4>販売ステータス</h4>
        </div>
        <div class="col-md-6">
            
        </div>
        <div class="col-auto">
            <%= f.submit "変更を保存" %>
        </div>
    <% end %>
</div>