<h1>配送先登録/一覧</h1>
<%= form_with model:@address,url:addresses_path,method: :post,local:true do |f| %>
  <p>郵便番号(ハイフンなし)<%= f.text_field:postal_code,placeholder:"0000000" %></p>
  <p>住所<%= f.text_field:address,placeholder:"東京都渋谷区代々木神園町0-0" %></p>
  <p>宛名<%= f.text_field:name,placeholder:"令和道子" %><%= f.submit "新規登録",class:"btn btn-sm btn-success" %></p>
<% end %>

<table class="table">
    <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
    </tr>
    <% @address_all.each do |f| %>
    <tr>
        <td><%= f.customer_id.postal_code %></td>
        <td><%= f.customer_id.address %></td>
        <td><%= f.customer_id.name %></td>
        <td><%= f.submit "編集",edit_address_path(f.id),method: :get,class:"btn btn-sm btn-success" %><%= f.submit "削除",address_path(f.id),method: :delete,class:"btn btn-sm btn-dangter" %></td>
    </tr>
    <% end %>
</table>