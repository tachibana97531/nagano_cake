<h2>ログイン</h2>
<p>会員の方はこちらからログイン</p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com",class:"login-form" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>&emsp;&emsp;
    <%= f.password_field :password, autocomplete: "current-password",class:"login-form" %>
  </div>



  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
<p>会員登録がお済みでない方は</p><br />
<p><%= link_to "こちら",new_customer_registration_path %>から新規登録を行って下さい。</p>

<%= render "public/shared/links" %>
